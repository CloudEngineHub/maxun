{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "mcp/**/*",
    "src/mcp-worker.ts",
    "src/logger.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}